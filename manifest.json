{
  "manifest_version": 3,
  "name": "Fix Mastodon Links",
  "version": "1.0",
  "description": "Redirects Mastodon Links to elk.zone",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}
